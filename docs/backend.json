
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the AgriClear platform.",
      "properties": {
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "companyName": {
          "type": "string",
          "description": "The user's farm or company name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "User's phone number."
        },
        "role": {
          "type": "string",
          "description": "User's role (farmer, buyer, logistics, admin)."
        },
        "verified": {
          "type": "boolean",
          "description": "Indicates if the user's account is verified by an admin."
        },
        "aadhaar_verified": {
          "type": "boolean",
          "description": "Indicates if the user's Aadhaar has been verified."
        },
        "disabled": {
          "type": "boolean",
          "description": "Indicates if the user's account has been suspended."
        },
        "created_at": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "email",
        "role",
        "verified",
        "aadhaar_verified",
        "created_at"
      ]
    },
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product listed on the AgriClear platform.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the product."
        },
        "description": {
          "type": "string",
          "description": "Description of the product."
        },
        "category": {
          "type": "string",
          "description": "Category of the product."
        },
        "price": {
          "type": "number",
          "description": "Price of the product."
        },
        "farmer_id": {
          "type": "string",
          "description": "Reference to the Farmer who listed the product."
        },
        "status": {
          "type": "string",
          "enum": ["listed", "sold", "shipped"]
        },
        "iot_data": {
          "type": "object",
          "properties": {
            "temperature": {"type": "number"},
            "humidity": {"type": "number"},
            "location": {
              "type": "object",
              "properties": {
                "lat": {"type": "number"},
                "lng": {"type": "number"}
              }
            },
            "timestamp": {"type": "string", "format": "date-time"}
          }
        },
        "quality_cert": {
          "type": "string",
          "description": "URL to the quality certification document."
        },
        "created_at": {
          "type": "string",
          "description": "Timestamp indicating when the product was listed.",
          "format": "date-time"
        }
      },
      "required": [
        "name",
        "description",
        "category",
        "price",
        "farmer_id",
        "status",
        "created_at"
      ]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents an order placed on the AgriClear platform.",
      "properties": {
        "product_id": {
          "type": "string",
          "description": "Reference to the Product being ordered."
        },
        "buyer_id": {
          "type": "string",
          "description": "Reference to the Buyer who placed the order."
        },
        "farmer_id": {
          "type": "string",
          "description": "Reference to the Farmer who owns the product."
        },
        "amount": {
          "type": "number",
          "description": "Total amount of the order."
        },
        "status": {
          "type": "string",
          "enum": ["pending", "confirmed", "shipped", "delivered", "paid"]
        },
        "escrow_released": {
          "type": "boolean",
          "description": "Indicates if the escrow payment has been released."
        },
        "delivery_proof": {
          "type": "string",
          "description": "URL to the delivery proof document."
        },
        "created_at": {
          "type": "string",
          "description": "Timestamp indicating when the order was placed.",
          "format": "date-time"
        }
      },
      "required": [
        "product_id",
        "buyer_id",
        "farmer_id",
        "amount",
        "status",
        "created_at"
      ]
    },
    "Shipment": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Shipment",
      "type": "object",
      "description": "Represents a shipment of an order on the AgriClear platform.",
      "properties": {
        "order_id": {
          "type": "string",
          "description": "Reference to the Order being shipped."
        },
        "logistics_id": {
          "type": "string",
          "description": "Reference to the Logistics provider handling the shipment."
        },
        "status": {
          "type": "string",
          "enum": ["picked", "in-transit", "delivered"]
        },
        "location_history": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lat": {"type": "number"},
              "lng": {"type": "number"},
              "timestamp": {"type": "string", "format": "date-time"}
            }
          }
        },
        "condition_logs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "temp": {"type": "number"},
              "humidity": {"type": "number"},
              "timestamp": {"type": "string", "format": "date-time"}
            }
          }
        },
        "delivery_confirmed": {
          "type": "boolean"
        },
        "confirmed_by": {
          "type": "string"
        }
      },
      "required": [
        "order_id",
        "logistics_id",
        "status"
      ]
    },
    "Reward": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Reward",
      "type": "object",
      "description": "Represents a reward earned by a user on the AgriClear platform.",
      "properties": {
        "user_id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["organic", "zero-waste", "timely-delivery"]
        },
        "points": {
          "type": "number"
        },
        "verified": {
          "type": "boolean"
        },
        "issued_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["user_id", "type", "points", "issued_at"]
    },
    "FraudAlert": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "FraudAlert",
      "type": "object",
      "description": "Represents a fraud alert generated by the AI module.",
      "properties": {
        "transaction_id": {"type": "string"},
        "type": {
          "type": "string",
          "enum": ["price-spike", "fake-quality", "duplicate-listing"]
        },
        "confidence": {"type": "number"},
        "resolved": {"type": "boolean"},
        "detected_at": {"type": "string", "format": "date-time"}
      },
      "required": ["transaction_id", "type", "confidence", "resolved", "detected_at"]
    },
    "CartItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Cart Item",
      "type": "object",
      "description": "Represents an item in a user's shopping cart.",
      "properties": {
        "product_id": { "type": "string" },
        "quantity": { "type": "number" },
        "added_at": { "type": "string", "format": "date-time" }
      },
      "required": ["product_id", "quantity", "added_at"]
    }
  },
  "auth": {
    "providers": ["password", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles."
    },
    "/users/{userId}/cart/{productId}": {
      "schema": { "$ref": "#/entities/CartItem" },
      "description": "Stores items in a user's shopping cart."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores product listings."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/Order" },
      "description": "Stores order information."
    },
    "/shipments/{shipmentId}": {
      "schema": { "$ref": "#/entities/Shipment" },
      "description": "Stores shipment details."
    },
    "/rewards/{rewardId}": {
      "schema": { "$ref": "#/entities/Reward" },
      "description": "Stores reward information for users."
    },
    "/fraud_alerts/{alertId}": {
      "schema": { "$ref": "#/entities/FraudAlert" },
      "description": "Stores fraud alerts detected by the AI module."
    }
  }
}
